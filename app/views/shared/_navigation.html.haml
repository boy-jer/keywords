.navbar.navbar-fixed-top
  .navbar-inner
    .container
      = link_to t('shared.app'), root_path, :class => 'brand'
      %ul.nav
        %li{:class => controller_name == 'home' ? 'active' : ''}=link_to t('home.nav'), root_path
        / %li{:class => controller_name == 'about' ? 'active' : ''}=link_to t('about.nav'), about_path
        - if current_user
          %li{:class => controller_name == 'searches' ? 'active' : ''}=link_to t('searches.nav'), searches_path
          %li{:class => "dropdown pull-right", :style => "margin-left:200px"}
            = link_to current_user, 'javascript:void(0)', :class => "dropdown-toggle", :data => {:toggle => 'dropdown'}
            %ul.dropdown-menu
              %li=link_to t('shared.account'), user_path
              %li=link_to t('shared.sign_out'), sessions_path, :method => :delete
      - if current_user
        = link_to t('searches.new'), '#search-modal', :class => 'btn primary pull-right', :style => "margin-top:5px", :data => {:toggle => "modal"}
      - else
        = link_to t('shared.sign_in'), '/auth/twitter', :class => 'btn primary pull-right', :style => "margin-top:5px"